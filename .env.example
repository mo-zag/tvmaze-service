# Environment Variables Template
# Copy this file to .env and update with your actual values
# Never commit sensitive information to version control

# Database Configuration
DATABASE_URL=postgresql://localhost/tvmaze_service_development
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=tvmaze_service
DB_PASSWORD=your_database_password_here
DB_NAME_DEVELOPMENT=tvmaze_service_development
DB_NAME_TEST=tvmaze_service_test
DB_NAME_PRODUCTION=tvmaze_service_production
RAILS_MAX_THREADS=5

# Rails Environment
RAILS_ENV=development
RACK_ENV=development

# Server Configuration
PORT=3000
HOST=localhost

# API Keys (replace with actual values)
# TVMAZE_API_BASE_URL=https://api.tvmaze.com
# API_KEY=your_api_key_here

# Redis Configuration (if using Redis)
# REDIS_URL=redis://localhost:6379/0

# Mailer Configuration
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# Application Secrets
# SECRET_KEY_BASE=your_secret_key_base_here

# Logging
LOG_LEVEL=debug
